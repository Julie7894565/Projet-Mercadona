{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
     <thead>
            <tr>
                <th>Label</th>
                <th>Description</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Promotion</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.label }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}</td>
                    <td><img src={{ product.picture}}</td>
                    <td>{{ promotion.promotionPercentage }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
