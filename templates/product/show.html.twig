{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Products</h1>
        {{ dump(product) }}

    <div class="grid grid-cols-1 gap-10 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 p-8">
        {% for product in products %}
            <div class="flex flex-col rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-neutral-700">
                <img class="h-48 w-full rounded-t-lg object-cover md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="{{ product.picture }}" alt="{{ product.label }}" />
                <div class="flex flex-col justify-start p-6">
                    <h5 class="mb-2 text-xl font-medium text-neutral-800 dark:text-neutral-50">{{ product.label }}</h5>
                    <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">{{ product.description | raw  }}</p>
                    <p class="text-lg text-neutral-500 dark:text-neutral-300">{{ product.price }} €</p>
                    <p class="text-lg text-neutral-500 dark:text-neutral-300">{{ product.price }} €</p>
                
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
