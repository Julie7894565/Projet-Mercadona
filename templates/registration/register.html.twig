{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        <fieldset>
            <legend>Mon identit√©</legend>
            {{ form_row(registrationForm.name) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.email) }}
        </fieldset>

        <fieldset>
            <legend>Mon adresse</legend>
            {{ form_row(registrationForm.adress.adress) }}
            {{ form_row(registrationForm.adress.postCode) }}
            {{ form_row(registrationForm.adress.city) }}
            {{ form_row(registrationForm.adress.country) }}
        </fieldset>
        
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.RGPDConsent) }}

        <button type="submit" class="btn">M'inscrire</button>
    {{ form_end(registrationForm) }}
{% endblock %}
