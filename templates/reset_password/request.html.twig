{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-center text-2xl p-10">Réinitialisation de votre mot de passe</h1>

        <div>
            {{ form_start(requestForm) }}
                <div class="flex items-center justify-center">
                    {{ form_row(requestForm.email) }}
                </div>
        </div>
        
        
        <div class="text-center">
            <small >Entrez votre adresse email et vous recevrez un lien pour réinitialiser votre mot de passe.</small>
        </div>

        <div class="text-center p-4"><button class="btn btn-primary bg-sky-600/50 font-bold p-2">Envoyer la demande de réinitialisation du mot de passe</button></div>
        
    {{ form_end(requestForm) }}
    
{% endblock %}
