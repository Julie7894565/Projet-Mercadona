{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté(e)s comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
        </div>
    {% endif %}

    <div class="flex flex-col items-center">
        <div>
            <h1 class="text-center text-5xl p-10">Connexion</h1>
        
        
                <div class="flex flex-col justify-center">
                    <div class="p-4">
                    <label for="inputEmail">Email</label>
                        <div>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>
                </div>

                <div class="flex flex-col justify-center">
                    <div class="p-4">
                        <label for="inputPassword">Mot de passe</label>
                    <div>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                     </div>
                </div>


                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                <div class="p-4">
                    <button class="btn p-2 bg-sky-600/50 font-bold" type="submit">Se connecter</button>
                    <p class="pt-3.5">Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}"><strong>Inscrivez vous en cliquant ici</a></strong></p>
                    <p class="py-3">Vous avez oublié votre mot de passe ? <a href="{{ path('app_forgot_password_request') }}"><strong>Cliquez-ici</a></strong></p>
                </div>
                
                    
                </div>
        </div>
    </div>
    
</form>
{% endblock %}
